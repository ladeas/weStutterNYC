

<%= render "info/menu" %>

<%= render 'info/logo_container' %>

  
  <div class="page_wrapper">
    <section class="container">
      
      <!-- Start Page Content -->
      <div id="blog" class="page">
      
        <% if user_signed_in? %>
        <p><%= link_to 'Add New Recap', new_recap_path %></p>
        <% end %>

        <div class="sub_heading">
          <h1>Monthly Recaps</h1>
          <!-- <span class="line"></span> it would be cool to add a line, but the line crosses over text when font size increases-->
        </div>

      
        
        <% @recaps.each do |recap| %>
        <!-- Start Blog Post -->
        <div class="post">


          <h3><%= link_to recap.title, recap %></h3>  <% if user_signed_in? %> <%= link_to 'Edit Recap', edit_recap_path(recap) %> <%= link_to 'Delete Recap', recap, method: :delete, data: { confirm: 'Are you sure?' } %> <% end %>



          <div class="meta">
            <span class="date"> <span class="icon general">i</span><%= recap.created_at.strftime("%B %e, %Y") %></span>
            <!-- <span class="comments"><span class="icon social_misc">w</span> <a href="" title="">2 Comments</a></span>   -->
            <span class="author"> <span class="icon social_misc">x</span> <%= User.find(recap.user_id).name %></span>
          </div>
                    <%= image_tag recap.photo, class: "rounded", class:"smaller_recap_img" if recap.photo %>

                    <p> <%= raw truncate(recap.body, length: 500, separator: ' ') { link_to 'read more', recap} %> </p> 


        </div>
        <!-- End Blog Post -->
        <% end %>
       
      </div>
      <!-- End Page Content -->
      
      <!-- Start Sidebar -->
     <%#= render "info/side_bar" %>
      <!-- End Sidebar -->
      
</div>
  <!-- End Blog -->
  
    <%= render "info/footer" %>
