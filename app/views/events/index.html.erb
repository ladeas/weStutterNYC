
<%= render 'info/menu' %>
  
<%= render 'info/logo_container' %>

  
  <div class="page_wrapper">
    <section class="container">
      
      <!-- Start Event List -->

      <div id="events_list" class="page">
              <% if is_admin? %>
              <p><%= link_to 'New Event', new_event_path %></p>
               <% end %>
  
      <div class="sub_heading">
        <h1>Upcoming Events</h1>
        </div>


        <!-- Start Event Item -->
        <% @events.each do |event| %>

        <div class="list">
          <div class="box_heading">
            <h2> <%= event.start_datetime.strftime("%A, %B %e, %Y @ %l:%M%P") %></h2>
            <span class="line"></span>
          </div>

          <div class="event_details">
            <!-- <h5><%#= event.name %></h5> -->
            <h3><%= link_to event.name, event %></h3>
            <% if is_admin? %> <%= link_to 'Edit Event', edit_event_path(event) %> <%= link_to 'Delete Event', event, method: :delete, data: { confirm: 'Are you sure?' } %> 
            <% end %>

             <div class="managed_content">
               <%= simple_format(event.details) %>
            </div>

          </div>
          <div class="event_date">
            <ul class="left">
              <li>Start:</li>
              <li>End:</li>
              <li>Place:</li>
              <li>Address:</li>
              <li>Cost:</li>
            </ul>
            <ul class="right">
              <li><%=event.start_datetime.strftime("%l:%M%P")%></li>
              <li><%=event.end_datetime.strftime("%l:%M%P")%></li>
              <li><%=event.venue%></li>
              <li><%=event.address%></li>
              <li><%=event.cost%></li>
            </ul>
          </div>
        </div>

        <% end %>
        <!-- End Event Item -->

        
       
          
      </div>
        
    </section>
  </div>
    
      <%= render 'info/footer' %>